<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true do %><i class="fas fa-heart text-danger"></i> <% end %>
  <%= book.favorites.count %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true do %><i class="far fa-heart text-muted"></i> <% end %>
  <%= book.favorites.count %>
<% end %>